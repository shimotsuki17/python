i = 0aug = "Грамофон"
while i < 2:    i += 1
    print("Загадка : Музыкант, певец, рассказчик - а всего труба да ящик")    pkm = input("Ответ: ")
    if pkm == aug:        print("Загадка разгадана. Поздравляю!!!")
        break    else:
        print("Неправильно")        print(f"опыток не осталось {3 - i}")
